#!/usr/bin/env sh

PKG_PATH=$(pwd)

if ! test -z $DEVTOOLS_LOAD; then
  PKG_PATH="$PKG_PATH/inst"
fi

if [ "$BUILD_LANTERN" != true ] && [[ "$BUILD_LANTERN" != 1 ]]; then
  BUILD_LANTERN=""
fi

if [ "$BUILD_LANTERN" != "" ]; then
  LANTERN_TARGET="lantern"
else
  LANTERN_TARGET="dummylantern"
fi

cd src
sed -e "s|@LANTERN_TARGET@|$LANTERN_TARGET|" -e "s|@PKG_PATH@|$PKG_PATH|" Makevars.in > Makevars
